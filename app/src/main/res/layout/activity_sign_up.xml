<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="542dp"
        android:layout_height="944dp"
        android:background="@drawable/logoo"
        tools:layout_editor_absoluteX="-67dp"
        tools:layout_editor_absoluteY="-216dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="431dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_background"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etUsername"
            android:layout_width="329dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/login_circle_24"
            android:drawablePadding="8dp"
            android:hint="Enter Username"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="331dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/cell_phone"
            android:drawablePadding="8dp"
            android:hint="Enter Phone"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPass2"
            android:layout_width="331dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/round_lock_24"
            android:drawablePadding="8dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPass1"
            android:layout_width="331dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/round_lock_24"
            android:drawablePadding="8dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/pink"
            android:text="CONFIRM"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="By providing my phone number, I hereby agree and accept the Terms of Service and Privacy Policy."
            android:textColor="@color/pink"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="313dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:text="Already have an Account? Login to Account !"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


